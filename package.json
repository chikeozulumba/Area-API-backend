  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build:prod": "yarn clean; babel -d ./build ./src  --copy-files --source-maps inline; yarn migrate",
    "dev": "babel-node ./src/index.js",
    "db:reset": "pwd; yarn undo-db; yarn migrate",
    "migrate": "if [[ ${NODE_ENV} == \"production\" ]]; then sequelize db:migrate; else babel-node ./node_modules/.bin/sequelize db:migrate; fi;",
    "heroku-postbuild": "yarn build:prod",
    "undo-db": "babel-node ./node_modules/.bin/sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "test": "NODE_ENV=test yarn db:reset; NODE_ENV=test jest --ci --verbose --forceExit --maxWorkers=10 --passWithNoTests"
  }
